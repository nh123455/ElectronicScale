<Window x:Class="CanDienTu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phần mềm Cân Điện Tử"
        Height="1000" Width="1400" 
        Background="#f7f9fb"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <!-- ==== STYLE CHUNG ==== -->
    <Window.Resources>
        <!-- Bo tròn TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" 
                                BorderBrush="#B0BEC5" 
                                BorderThickness="1"
                                Background="White">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- Style cho ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="#B0BEC5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Style cho Button -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <!-- ==== GIAO DIỆN CHÍNH ==== -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.8*"/>
            <!-- Form phiếu -->
            <ColumnDefinition Width="1.8*"/>
            <!-- Thông tin cân -->
            <ColumnDefinition Width="2.5*"/>
            <!-- Camera -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- ========== 1. THÔNG TIN PHIẾU CÂN ========== -->
        <Border Grid.Column="0" Grid.Row="0" CornerRadius="12" Padding="15" Background="White" BorderBrush="#CFD8DC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Thông tin phiếu cân" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>

                <Grid Height="389">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="79"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Số phiếu:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1"/>

                    <TextBlock Text="Biển số xe:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Người bán:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Người mua:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="Lái xe:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="4" Grid.Column="1"/>

                    <TextBlock Text="Mã hàng:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="5" Grid.Column="1"/>

                    <TextBlock Text="Tên hàng:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="6" Grid.Column="1"/>

                    <TextBlock Text="Kho hàng:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="7" Grid.Column="1"/>

                    <TextBlock Text="Ghi chú:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBox Grid.Row="8" Grid.Column="1" AcceptsReturn="True" TextWrapping="Wrap" Margin="4,4,4,10"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ========== 2. KẾT QUẢ CÂN ========== -->
        <Border Grid.Column="1" Grid.Row="0" CornerRadius="12" Padding="15" Background="White" BorderBrush="#CFD8DC" BorderThickness="1" Margin="10,0">
            <StackPanel>
                <TextBlock Text="Kết quả cân" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>

                <GroupBox Header="Kiểu cân" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="10,5">
                        <CheckBox Content="Nhập" Margin="5"/>
                        <CheckBox Content="Xuất" Margin="5"/>
                        <CheckBox Content="Dịch vụ" Margin="5"/>
                    </StackPanel>
                </GroupBox>

                <TextBlock Text="Khối lượng cân lần 1 (Kg)" Margin="5,5,0,0"/>
                <TextBox Width="200"/>

                <TextBlock Text="Khối lượng cân lần 2 (Kg)" Margin="5,10,0,0"/>
                <TextBox Width="200"/>

                <TextBlock Text="Khối lượng hàng (Kg)" Margin="5,10,0,0"/>
                <TextBox Width="200"/>

                <WrapPanel Margin="10,20,0,0">
                    <Button Content="Cân lần 1"/>
                    <Button Content="Cân lần 2" Background="#43A047"/>
                    <Button Content="In phiếu" Background="#FB8C00"/>
                    <Button Content="Lập phiếu mới" Background="#5C6BC0"/>
                    <Button Content="Lấy phiếu mới nhất" Background="#00897B"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- ========== 3. VIEW CAMERA ========== -->
        <Border Grid.Column="2" Grid.RowSpan="2" CornerRadius="12" Padding="10" Background="White" BorderBrush="#CFD8DC" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="10" Margin="10">
                    <Image x:Name="Cam1View" Stretch="UniformToFill"/>
                </Border>

                <Border Grid.Row="1" BorderBrush="#B0BEC5" BorderThickness="1" CornerRadius="10" Margin="10">
                    <Image x:Name="Cam2View" Stretch="UniformToFill"/>
                </Border>
            </Grid>
        </Border>

        <!-- ========== 4. DANH SÁCH PHIẾU ========== -->
        <Border Grid.ColumnSpan="2" Grid.Row="1" CornerRadius="12" Padding="10" Background="White" BorderBrush="#CFD8DC" BorderThickness="1" Margin="0,10,10,0">
            <StackPanel>
                <TextBlock Text="Danh sách phiếu" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#1565C0"/>
                <DataGrid AutoGenerateColumns="False" Height="250" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Số phiếu" Binding="{Binding SoPhieu}"/>
                        <DataGridTextColumn Header="Biển số xe" Binding="{Binding BienSoXe}"/>
                        <DataGridTextColumn Header="Người bán" Binding="{Binding NguoiBan}"/>
                        <DataGridTextColumn Header="Người mua" Binding="{Binding NguoiMua}"/>
                        <DataGridTextColumn Header="Lái xe" Binding="{Binding LaiXe}"/>
                        <DataGridTextColumn Header="Tên hàng" Binding="{Binding TenHang}"/>
                        <DataGridTextColumn Header="KL Cân 1" Binding="{Binding KLCan1}"/>
                        <DataGridTextColumn Header="KL Cân 2" Binding="{Binding KLCan2}"/>
                        <DataGridTextColumn Header="KL Hàng" Binding="{Binding KLHang}"/>
                        <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
